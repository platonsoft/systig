<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/BarraTransferencia"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/BarraTransferencia"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/colorFondoTitulo"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/titulo_registro"
                    android:textColor="@color/colorTextoBlanco"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/txtNombres"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:hint="Nombres"
                        android:inputType="textPersonName"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txtApellidos"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:hint="Apellidos"
                        android:inputType="textPersonName"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinTipodoc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:entries="@array/tipo_doc"
                            android:spinnerMode="dialog" />

                        <EditText
                            android:id="@+id/txtNroDoc"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="Nro. Documento"
                            android:inputType="number"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Telefono"
                    android:inputType="phone"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinMonedaPais"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/moneda_registro"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/spinBanco"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/bancos_colombia"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/txtNroCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Nro de Cuenta"
                    android:inputType="number"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinTipoCuenta"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/tipo_cuenta_banco"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/txtMontoCorte"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Monto de Corte"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnCargarDoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/backbutton"
                    android:text="Cargar Doc" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>