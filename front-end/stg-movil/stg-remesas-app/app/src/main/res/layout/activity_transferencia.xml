<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferenciaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/BarraTransferencia"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/BarraTransferencia"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimaryTransferir"
                android:gravity="center_vertical|center_horizontal|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Transferencia"
                    android:textColor="@color/colorTextoBlanco"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimaryTransferirSubtitulo"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/txvReceptor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Datos del Receptor"
                    android:textColor="@color/colorTextoBlanco" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/RecDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Descripcion"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/RECTipoDoc"
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:entries="@array/tipo_doc" />

                    <EditText
                        android:id="@+id/RECNroDoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Nro de Documento"
                        android:inputType="number"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/RecNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombres"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RecApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RecTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Telefono de confirmacion"
                    android:inputType="phone"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RecEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email (Opcional)"
                    android:inputType="textEmailAddress"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/RecBanco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/bancos_venezuela" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/RecTipoCuenta"
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:entries="@array/tipo_cuenta_banco" />

                    <EditText
                        android:id="@+id/editText21"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="50dp"
                    android:background="@color/colorPrimaryTransferirSubtitulo"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:orientation="horizontal">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:backgroundTint="@color/colorFondoBoton"
                        app:srcCompat="@drawable/ico_transferir" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:text="Transferir"
                        android:textColor="@color/colorTextoBlanco"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>