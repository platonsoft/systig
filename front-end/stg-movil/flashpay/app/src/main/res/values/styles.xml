<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAzulElectrico</item>
        <item name="colorPrimaryDark">@color/colorAzulElectrico</item>
        <item name="colorAccent">@color/colorGrisClaro</item>
        <!-- Blue -->
    </style>

    <style name="AppThemeFlashPay" parent="AppTheme">

    </style>

    <style name="TextoCargando">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextoTitulo">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="flashpay">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="flashpay_moneda">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="CampoTexto" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/colorBlanco</item>
        <item name="android:strokeColor">@color/colorAzulElectrico</item>
        <item name="android:foregroundTint">@color/colorGrisClaro</item>
        <item name="boxStrokeWidth">4dp</item>
    </style>

    <style name="TextoSubTitulo">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppThemeFlashPay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFlashPay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeFlashPay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="flashpay_etiqueta_mini">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#4D000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>
</resources>
